# Top-level settings for the “files” config
files {
    default_disk = "local"
    max_bytes    = 20971520
    mime_allow   = ["image/jpeg","image/png","image/webp","application/pdf"]

    # All disks grouped under one “disks” object
    disks {
        # Local filesystem
        local {
            root             = "public/files"
            public_base_url  = "files"
        }

        # Uncomment & fill out to enable S3
        # s3 {
        #   bucket           = "my-s3-bucket"
