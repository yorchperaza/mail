{
  "name": "monkeyscloud/monkeyslegion-skeleton",
  "description": "Starter project for the MonkeysLegion framework",
  "type": "project",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.4",
    "monkeyscloud/monkeyslegion": "^1.0",
    "laminas/laminas-diactoros": "^3.6",
    "monolog/monolog": "^3.9",
    "ext-openssl": "*",
    "phpmailer/phpmailer": "^6.10",
    "ext-pdo": "*",
    "ext-redis": "*",
    "predis/predis": "^3.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "http-interop/http-factory-tests": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "src/Template/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
      "@php vendor/bin/ml key:generate"
    ],
    "post-install-cmd": [
      "@php vendor/bin/ml key:generate --if-missing"
    ],
    "serve": "php vendor/bin/dev-server",
    "server:stop": "php vendor/bin/dev-server stop",
    "test": "phpunit"
  },
  "bin": [
    "bin/ml",
    "bin/dev-server",
    "bin/dev-router.php"
  ],
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  }
}
